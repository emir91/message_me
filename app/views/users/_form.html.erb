<div class="ui middle aligned center aligned grid">
  <div class="column">
    <div class="pt">
      <h3 class="ui center aligned icon header">
      <%= @user.new_record? ? '<i class="circular power off orange icon"></i>Sign up for Message Me'.html_safe : '<i class="edit orange icon"></i>Edit profile'.html_safe %>
      </h3>
    </div>

    <%= form_for(@user, html: {class:"ui form", role: 'form'}, url: new_user_path) do |f|%>
      <div class="ui stacked secondary segment">
        <div class="field">
          <%= f.label :email, "Email"%>
          <div>
            <%= f.text_field :email, placeholder:"Email" %>
          </div>
        </div>
        <div class="field">
          <%= f.label :username, "Username"%>
          <%= f.text_field :username, placeholder:"Username" %>
        </div>
        <div class="field">
          <%= f.label :password, "Password"%>
          <%= f.password_field :password, placeholder:"Password" %>
        </div>
        <%= f.button(@user.new_record? ? "Sign up" : "Update profile", class:"ui large orange submit button") %>
      </div>
    <% end %>
  </div>
</div>
<div class="pt">
  <%= link_to "Go back", login_path %>
</div>