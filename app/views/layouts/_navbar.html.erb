<% if logged_in? %>
  <div class="ui small inverted menu">
    <div class="ui container">
      <%= link_to 'Chatroom', root_path, class: 'item'%>
      <div class="right menu">
        <div class="ui dropdown item">
          <%= current_user.username %><i class="dropdown icon"></i>
          <div class="menu">
            <%= link_to 'View profile', user_path(current_user), class:"item" %>
            <%= link_to 'Edit profile', edit_user_path(current_user), class:"item" %>
          </div>
        </div>
        <%= link_to 'Logout', logout_path, method: :delete, class: 'item'%>
      </div>
    </div>
  </div>
<% end %>